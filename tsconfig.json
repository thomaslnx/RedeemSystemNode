{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": ["ESNext"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
